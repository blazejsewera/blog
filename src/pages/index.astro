---
import { getReverseChronologicalArticlesFromGlob } from '../components/article/articles'
import {
  blogGithubSrcPagesRoot,
  defaultAuthor,
  defaultLicense,
} from '../components/const/meta'
import Footer from '../components/section/Footer.astro'
import Listing from '../layouts/Listing.astro'

const globResult = await Astro.glob('./*.md')
---

<Listing
  articles={getReverseChronologicalArticlesFromGlob(globResult)}
  title="Software development blog"
  tabTitle="Software development blog by Blazej Sewera â€” blog.sewera.dev"
  subtitle="By Blazej Sewera"
  description=""
  imgUrl="/image/nordic-sky.jpg"
  imgDescription="Nordic sky"
/>
<Footer
  author={defaultAuthor}
  license={defaultLicense}
  source={`${blogGithubSrcPagesRoot}/index.astro`}
  year={new Date().getFullYear().toString()}
/>

<style>
  a {
    text-decoration: none;
    color: #333;
  }
</style>
