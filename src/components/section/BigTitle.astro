---
import MenuWithRibbon from '../navigation/MenuWithRibbon.astro'
import { cx } from '../util/classes'

export interface Props {
  title: string
  subtitle?: string
  imgUrl?: string
}

const { title, subtitle, imgUrl } = Astro.props
---

<div
  id="screen-image"
  class={cx(
    'text-white',
    'p-12',
    'md:p-20',
    'xl:p-24',
    'mb-9',
    'bg-center',
    'bg-cover',
    'bg-no-repeat',
    'bg-scroll',
    'bg-origin-border',
    'bg-clip-border',
    'bg-neutral-700',
  )}
>
  <MenuWithRibbon ribbonTitle={title} />
  <div class={cx('flex')}>
    <h1
      class={cx(
        'mx-auto',
        'text-2xl',
        'md:text-4xl',
        'xl:text-5xl',
        'font-geometric',
      )}
    >
      {title}
    </h1>
  </div>
  {
    subtitle && (
      <div class={cx('flex')}>
        <div
          class={cx(
            'mx-auto',
            'mt-2',
            'md:mt-3',
            'xl:mt-4',
            'text-xl',
            'md:text-2xl',
            'xl:text-3xl',
            'font-geometric',
            'opacity-90',
          )}
        >
          {subtitle}
        </div>
      </div>
    )
  }
</div>

<style is:global define:vars={{ imgUrl: imgUrl ? `url('${imgUrl}')` : '' }}>
  div#screen-image {
    background-image: var(--imgUrl);
  }
</style>
