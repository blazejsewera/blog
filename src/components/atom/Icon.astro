---
// @ts-ignore
import { icons } from 'feather-icons'

export interface Props {
  icon: string
  size: string
  color?: string
  cl?: string
}

const { icon, size, color, cl } = Astro.props

const toSvg = (color?: string) =>
  icons[icon].toSvg({ color, height: size, width: size })

const iconSvg = toSvg(color)
---

<i class={cl} set:html={iconSvg} />
